<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="User Data">

        <EditTextPreference
            app:key="user_name"
            app:title="username"
            app:isPreferenceVisible="true"

             />

        <EditTextPreference
            app:key="user_password"
            app:title="password"
            app:isPreferenceVisible="true"
            />
        <EditTextPreference
            app:key="token"
            app:title="token"
            app:isPreferenceVisible="true"
            />
    </PreferenceCategory>
    <PreferenceCategory app:title="Design">


        <SwitchPreference
            android:defaultValue="false"
            android:key="purple_mode"
            android:title="purple mode" />
    </PreferenceCategory>



</PreferenceScreen>